extends ../layout/index
    
block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-bold Raices
        h2.text-center.text-2xl.font-extrabold=pagina
        if errores
            div(clases="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font.bold= error.msg
        div.mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/registro")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Tu nombre
                        input#nombre(type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu nombre" name="nombre" value= usuario ? usuario.nombre:"")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Tu Email
                        input#email(type="email" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu nombre" name="email" value= usuario ? usuario.email:"")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Tu Password
                        input#password(type="password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu password" name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="repetir_password") Repetir Password
                        input#repetir_password(type="password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Repite tu password" name="repetir-password")
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión
                        a.text-gray-500.text-xs(href="/auth/olvide-password") Olvide mi password
                    input(type="submit" value="Crear Cuenta" class="w-full bg-indigo-600 text-white hover:bg-indigo-700 font-bold py-3 cursor-pointer")