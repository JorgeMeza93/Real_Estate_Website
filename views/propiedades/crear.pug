extends ../layout/index
block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices 
            | Pipo
        h2.text-center.text-2xl.font-extrabold= pagina
        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form.space-y-8
                div.space-y-5
                    h3.text-lg.leading-6.font-medium.text-gray-900 Información General
                    p.text-gray-600 Añade Información sobre la propiedad en venta
                div
                    label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="titulo") Título de Anuncio
                    input#titulo(type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Titulo Propiedas, ej. Casa en la Playa" name="titulo")
                div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                    div(class="md:w-1/2")
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="categoria") Categoria
                        select#categoria(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" name="categoria")
                            option(value="") - Seleccione -
                    div(class="md:w-1/2")
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="precio") Precio
                        select#precio(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" name="precio")
                            option(value="") - Seleccione -
                div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                    div(class="md:w-1/4")
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="habitaciones") Habitaciones
                        select#habitaciones(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" name="habitaciones")
                            option(value="") - Seleccione -
                            - var n = 1;
                                while n < 7
                                    option(value = n) #{n++}
                    div(class="md:w-1/4")
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="estacionamiento") Estacionamiento
                        select#estacionamiento(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" name="estacionamiento")
                            option(value="") - Seleccione -
                            - var n = 1;
                                while n < 5
                                    option(value = n) #{n++}
                    div(class="md:w-1/4")
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="banos") Baños
                        select#banos(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" name="banos")
                            option(value="") - Seleccione -
                            - var n = 1;
                                while n < 7
                                    option(value = n) #{n++}
                    div(class="md:w-1/4")
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="jardin") Jardín
                        select#jardin(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" name="jardin")
                            option(value="") - Seleccione -
                            option(value=1) Sí
                            option(value=0) No
block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
